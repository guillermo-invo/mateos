# ============================================
# Base de Datos PostgreSQL
# ============================================
DB_USER=asistente
DB_PASSWORD=tu_password_seguro
DB_NAME=transcripciones_db

# URL interna de Docker (para app)
DATABASE_URL="postgresql://asistente:tu_password@postgres-db:5432/transcripciones_db?schema=public"

# URL externa (para Prisma CLI desde host)
DATABASE_HOST_URL="postgresql://asistente:tu_password@localhost:8832/transcripciones_db?schema=public"

# ============================================
# Telegram Bot
# ============================================
TELEGRAM_BOT_TOKEN="tu_token_de_telegram"

# ============================================
# OpenAI (Whisper)
# ============================================
OPENAI_API_KEY="sk-proj-..."

# ============================================
# Cloudflare R2 (S3-Compatible Storage)
# ============================================
R2_ACCOUNT_ID="tu_account_id"
R2_ACCESS_KEY="tu_access_key"
R2_SECRET_KEY="tu_secret_key"
R2_BUCKET_NAME="tu_bucket_name"

# ============================================
# Configuración de Aplicación
# ============================================
NODE_ENV=production
LOG_LEVEL=info
PORT=8800

# ============================================
# Automatizaciones (IA)
# ============================================
# Umbral de similitud para fuzzy matching (0.0 - 1.0)
CONFIDENCE_THRESHOLD=0.6

# Modelo de OpenAI para extracción
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

# ============================================
# Resumen Diario Automático
# ============================================
# Chat ID del usuario que recibirá los resúmenes
# Para obtenerlo: envía /start al bot y revisa los logs
TELEGRAM_CHAT_ID=12345678

# Horario del resumen (cron: minuto hora día mes día_semana)
# 0 20 * * * = 8:00 PM todos los días
DAILY_SUMMARY_TIME="0 20 * * *"

# Usar IA para generar resumen más natural (true/false)
USE_AI_SUMMARY=true

# Timezone (para que el cron funcione en el horario correcto)
TZ=America/Montevideo
