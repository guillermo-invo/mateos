# Puerto del servidor
PORT=3100

# Base de datos extendida (nueva)
DATABASE_URL="postgresql://asistente:n8npass@transcripcion-postgres:5432/asistente_db"

# Base de datos de Mateos (solo lectura)
MATEOS_DB_URL="postgresql://asistente:n8npass@transcripcion-postgres:5432/transcripciones_db"

# OpenAI API
OPENAI_API_KEY="sk-proj-..."

# Configuración de IA
CONFIDENCE_THRESHOLD=0.6
OPENAI_MODEL="gpt-5-nano"
OPENAI_DAILY_MODEL="gpt-5-mini"
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

# Logs
LOG_LEVEL=info
NODE_ENV=production

# ============================================
# Resumen Diario Automático
# ============================================

# Token del bot de Telegram (mismo que mateos)
TELEGRAM_BOT_TOKEN="tu_token_de_telegram"

# Chat ID del usuario que recibirá los resúmenes
# Para obtenerlo: envía un mensaje al bot y ve los logs
# o usa https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_CHAT_ID="6365727491"

# Horario del resumen (cron expression)
# Por defecto: 8:00 PM todos los días
# Formato: minuto hora día mes día_semana
# Ejemplos:
#   0 20 * * *    -> 8:00 PM todos los días
#   0 21 * * *    -> 9:00 PM todos los días
#   0 12 * * 1-5  -> 12:00 PM lunes a viernes
DAILY_SUMMARY_TIME="0 20 * * *"

# Usar IA para generar el resumen (true/false)
# true = resumen con OpenAI (más natural)
# false = resumen simple en texto plano
USE_AI_SUMMARY=true

# Timezone (importante para que el cron funcione correctamente)
TZ="America/Montevideo"
